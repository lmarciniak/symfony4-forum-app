{% extends 'base.html.twig' %}

{% block pagination %}

currentPage {{ currentPage }} last page {{ lastPage }}
<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item {% if currentPage == 1 %} disabled {% endif %}">
            <span class="page-link">Previous</span>
        </li>
    {% for i in (currentPage - 3)..(currentPage + 3) %}

        {% if i <= lastPage and i >= 1 %}
            <li class="page-item {% if i == currentPage %} active {% endif %}">
                <a class="page-link" href="{{ path('category_show', {'page': i, 'categoryName': category.categoryName}) }}"> {{ i }} </a>
            </li>
        {% endif %}
        
    {% endfor %}

    <li class="page-item {% if currentPage == lastPage %} disabled {% endif %}">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>

{% endblock %}