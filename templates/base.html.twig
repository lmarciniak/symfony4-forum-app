<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
        {% endblock %}
    </head>
    <body>
        {% block mainnav %} 
            <div class="mainnav">
                <div class="baner"> </div>
                {% if app.user %}
                    <a href="{{ path('user_show', {'username': app.user.username}) }}"> {{ app.user.username }} </a>
                    <a href="{{ path('logout') }}">LOGOUT</a>
                    <img height="50" width="50" src="{{ absolute_url(asset('images/avatars/default.png')) }}" />
                {% else %}
                    <a href="{{ path('login') }}">LOGIN</a>
                    <a href="{{ path('registration') }}">REGISTRATION</a>
                {% endif %}
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
